<h1>Your Cart</h1>

<% if alert %>
  <p><%= alert %></p>
<% end %>

<% @cart.line_items.each do |i| %>
  <p><%= link_to i.item.title, item_path(i.item) %> | <%= "$#{i.item.price.to_f/100}" %> | Quantity: <%= i.quantity %> | <% if i.item.inventory < 5 %>
    <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
  <% end %> </p>
<% end %>

<p>Order total: <strong><%= number_to_currency(@cart.total.to_f/100) %></strong> </p>

<% if @cart.status != "submitted" %>
  <%= button_to 'Checkout', checkout_path(@cart.id) %>
<% end %>
