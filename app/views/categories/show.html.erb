<h1><%= @category.title %></h1>

<ul>
  <% @category.items.each do |item| %>
      <li>
        <%= link_to item.title, item_path(item) %>
        - Price $<%= (item.price.to_f/100) %>
        <% if user_signed_in? %>
          <form action="<%= line_items_path(item) %>" method="POST">
            <input type="submit" value="Add to Cart">
          </form>

        <% end %>
      </li>
  <% end %>
</ul>
