<h1><%= @category.title %></h1>

<ul>
  <% @category.items.each do |item| %>
    <li>
      <%= link_to item.title, item_path(item) %> |
      <%= "$#{item.price.to_f/100}" %>
    </li>
      <% if current_user %>
        <%= form_tag "/line_items/#{item.id}" do %>
          <%#= hidden_field_tag() %>

        <%= submit_tag "Add To Cart" %>
      <% end %>
    <% end %>
  <% end %>
</ul>
